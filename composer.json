{
    "name": "fortrabbit/stack-detector",
    "description": "A package to detect the PHP stack and node config of a project",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "fortrabbit\\StackDetector\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "fortrabbit\\Tests\\StackDetector\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Einenlum",
            "email": "contact@einenlum.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^10.4",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.82"
    },
    "require": {
        "php": "^8.4",
        "einenlum/composer-version-parser": "^1.0",
        "knplabs/github-api": "^3.12",
        "symfony/http-client": "^7.0",
        "nyholm/psr7": "^1.8"
    },
    "scripts": {
        "unit-test": "phpunit tests --display-warnings",
        "static-analysis": "phpstan",
        "test-cs": "./vendor/bin/php-cs-fixer fix --dry-run --diff -v",
        "fix-cs": "./vendor/bin/php-cs-fixer fix --diff -v",
        "test": [
            "@test-cs",
            "@static-analysis",
            "@unit-test"
        ]
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
